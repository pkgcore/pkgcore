#!/usr/bin/env pkgcore-ebuild-helper
# Copyright: 2011 Brian Harring <ferringb@gmail.com>
# License: GPL2/BSD 3 clause

check_args 1 -

# chunk off the 'do' prefix to get the subdir to use.
target=${HELPER_NAME:2}

# may exist already, but that's fine.
check_command_or_stop install -d "${D}${DESTTREE}/${target}"

for x in "$@" ; do
	check_command install -m0755 -o "${PKGCORE_INST_UID:-0}" -g "${PKGCORE_INST_GID:-0}" "${x}" "${D}${DESTTREE}/${target}"
done
